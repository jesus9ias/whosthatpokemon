---
import Pokemon from './Pokemon';
---

<Pokemon client:only />

<style is:global>

.pokemon {
  @apply flex flex-col flex-1;
}

.pokemon__flash {
  @apply py-8 mt-4 relative;
  background: url('/whosthatpokemon-flash.png') no-repeat;
  background-position: center;
  background-size: cover;
}

.pokemon__image {
  width: 300px;
  height: 300px;
  background-repeat: no-repeat;
  background-size: cover;
}

.button {
  @apply m-1 p-1 rounded-sm;
}

.button--dark {
  color: var(--white);
  background: var(--dark);
}

.button--gray {
  color: var(--dark);
  background: var(--gray);
}

.button--info {
  color: var(--white);
  background: var(--blue);
}

.button--warn {
  color: var(--dark);
  background: var(--yellow);
}

.button--disabled {
  opacity: 0.70;
}

.button--success {
  color: var(--white);
  background: var(--green);
}

.button--error {
  color: var(--white);
  background: var(--red-hard);
}


.button--skeleton {
  @apply h-8 flex-1;
  max-width: 70px;
  background: linear-gradient(
    100deg,
    rgba(255, 255, 255, 0) 40%,
    rgba(255, 255, 255, .5) 50%,
    rgba(255, 255, 255, 0) 60%
  ) var(--gray);
  background-size: 200% 100%;
  background-position-x: 180%;
  animation: skeleton-loading 0.5s linear infinite alternate;
}

.response-icon {
  @apply absolute bottom-8 right-8 p-3 text-6xl font-bold rounded-full;
  color: var(--white);
}

.response-icon--success {
  background: var(--green);
}

.response-icon--error {
  background: var(--red-hard);
}


@keyframes skeleton-loading {
  to {
    background-position-x: -20%;
  }
}

</style>