---
import Pokemon from './Pokemon';
---

<div>
  <Pokemon client:only />
</div>

<style is:global>
.pokemon__image {
  width: 300px;
  height: 300px;
  background-repeat: no-repeat;
  background-size: cover;
}

.button {
  @apply m-1 p-1 rounded-sm;
}

.button-dark {
  color: var(--white);
  background: var(--dark);
}

.button-gray {
  color: var(--dark);
  background: var(--gray);
}
</style>