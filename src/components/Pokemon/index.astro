---
import Pokemon from './Pokemon';
---

<Pokemon client:only />

<style is:global>

.pokemon {
  @apply flex flex-col flex-1;
}

.pokemon__flash {
  @apply py-8 mt-4;
  background: url('/whosthatpokemon-flash.png') no-repeat;
  background-position: center;
  background-size: cover;
}

.pokemon__image {
  width: 300px;
  height: 300px;
  background-repeat: no-repeat;
  background-size: cover;
}

.button {
  @apply m-1 p-1 rounded-sm;
}

.button--dark {
  color: var(--white);
  background: var(--dark);
}

.button--gray {
  color: var(--dark);
  background: var(--gray);
}

.button--info {
  color: var(--white);
  background: var(--blue);
}

.button--warn {
  color: var(--dark);
  background: var(--yellow);
}

.button--disabled {
  opacity: 0.70;
}

.button--success {
  color: var(--white);
  background: var(--green);
}

.button--error {
  color: var(--white);
  background: var(--red-hard);
}

</style>